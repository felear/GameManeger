<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".module.main.ui.MainActivity">

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"></FrameLayout>

    <View
        android:background="#8444"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.qf.gamemaneger.common.widget.ButtomMenu
            android:id="@+id/btm_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:text="首页"
            android:onClick="onChoice"
            app:normalPic="@mipmap/icon_home"
            app:pressPic="@mipmap/icon_home_hover"
            android:layout_weight="1"></com.qf.gamemaneger.common.widget.ButtomMenu>

        <com.qf.gamemaneger.common.widget.ButtomMenu
            android:id="@+id/btm_money"
            app:text="赚钱"
            app:normalPic="@mipmap/ic_menu_03_nor"
            app:pressPic="@mipmap/ic_menu_03_hl"
            android:onClick="onChoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.qf.gamemaneger.common.widget.ButtomMenu>

        <com.qf.gamemaneger.common.widget.ButtomMenu
            android:id="@+id/btm_guess"
            app:text="竞猜"
            app:normalPic="@mipmap/ic_menu_01_nor"
            app:pressPic="@mipmap/ic_menu_01_hl"
            android:onClick="onChoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.qf.gamemaneger.common.widget.ButtomMenu>

        <com.qf.gamemaneger.common.widget.ButtomMenu
            android:id="@+id/btm_mall"
            app:text="商城"
            app:normalPic="@mipmap/ic_menu_04_nor"
            app:pressPic="@mipmap/ic_menu_04_hl"
            android:onClick="onChoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.qf.gamemaneger.common.widget.ButtomMenu>

        <com.qf.gamemaneger.common.widget.ButtomMenu
            android:id="@+id/btm_me"
            app:text="我的"
            app:normalPic="@mipmap/ic_menu_02_nor"
            app:pressPic="@mipmap/ic_menu_02_hl"
            android:onClick="onChoice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.qf.gamemaneger.common.widget.ButtomMenu>

    </LinearLayout>

</LinearLayout>
